{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "server/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ],
    "redirects": [
        {
            "source": "https://sea-inside.co.il/:path*",
            "destination": "https://www.sea-inside.co.il/:path*",
            "permanent": true
        }
    ]
}